{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"vitest",
			"node"
		],
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": [
				"src/*"
			],
			"@config/*": [
				"src/config/*"
			],
			"@logic/*": [
				"src/logic/*"
			],
			"@model/*": [
				"src/logic/model/*"
			],
			"@utils/*": [
				"src/logic/shared/utils/*"
			],
			"@database/*": [
				"src/database/*"
			],
			"@shared/*": [
				"src/logic/shared/*"
			],
			"@test/*": [
				"test/*"
			]
		}
	},
	"include": [
		"test/**/*.ts",
		"src/**/*.ts"
	]
}